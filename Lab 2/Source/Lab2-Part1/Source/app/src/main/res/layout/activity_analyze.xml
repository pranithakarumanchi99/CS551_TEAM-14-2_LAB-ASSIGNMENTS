<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/sky"
    tools:context=".AnalyzeActivity">

    <TextView
        android:id="@+id/text_confidence_results"
        android:layout_width="133dp"
        android:layout_height="150dp"
        android:layout_alignEnd="@+id/img_analyze"
        android:layout_alignTop="@+id/text_label_results" />

    <ImageView
        android:id="@+id/img_analyze"
        android:layout_width="285dp"
        android:layout_height="240dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/text_label_results"
        android:layout_width="133dp"
        android:layout_height="150dp"
        android:layout_alignStart="@+id/img_analyze"
        android:layout_below="@+id/text_label_heading"
        android:layout_marginTop="-196dp" />

    <TextView
        android:id="@+id/text_label_heading"
        android:layout_width="133dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/img_analyze"
        android:layout_marginBottom="196dp"
        android:text="@string/label"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <TextView
        android:id="@+id/text_score_heading"
        android:layout_width="133dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/img_analyze"
        android:layout_alignTop="@+id/text_label_heading"
        android:text="@string/score"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <Button
        android:id="@+id/btn_analyze_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="OK"
        android:onClick="redirectToHomePage"
        android:theme="@style/MyButton"
        style="@style/Widget.AppCompat.Button.Borderless"/>
</RelativeLayout>